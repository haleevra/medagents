&НаСервере
Функция ПустоеЗначение(ТипЗначения)
	Если ТипЗначения = "Строка" Тогда
		Возврат "";
	ИначеЕсли ТипЗначения = "Число" Тогда
		Возврат 0;
	ИначеЕсли ТипЗначения = "Дата" Тогда
		Возврат Дата(1,1,1);
	ИначеЕсли ТипЗначения = "Булево" Тогда
		Возврат Ложь;
	КонецЕсли;
КонецФункции

